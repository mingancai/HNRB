<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="80px">

    <com.hnzx.hnrb.view.AutoScrollViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="424px"
        android:visibility="gone"
        app:layout_auto_basewidth="height" />

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="94px"
        android:layout_gravity="bottom"
        android:background="@drawable/home_pager_banner_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_auto_basewidth="height">

        <TextView
            android:id="@+id/bannerTitle"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24px"
            android:layout_marginRight="20px"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="高层动态"
            android:textColor="@android:color/white"
            android:textSize="38px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bannerIndex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10px"
            android:text="1"
            android:textColor="@android:color/white"
            android:textSize="22px" />

        <TextView
            android:id="@+id/bannerLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textColor="#54ffffff"
            android:textSize="24px" />

        <TextView
            android:id="@+id/bannerTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30px"
            android:layout_marginTop="10px"
            android:text="1"
            android:textColor="#b3ffffff"
            android:textSize="22px" />

    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoFrameLayout>