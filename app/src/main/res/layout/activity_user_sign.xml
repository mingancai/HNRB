<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.hnzx.hnrb.ui.me.UserSignActivity">

    <include layout="@layout/layout_top_liner" />

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/dateLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24px"
        android:layout_marginTop="46px"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017年"
            android:textColor="#313233"
            android:textSize="36px" />

        <TextView
            android:id="@+id/month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32px"
            android:text="7月"
            android:textColor="#747474"
            android:textSize="32px" />

    </com.zhy.autolayout.AutoLinearLayout>

    <LinearLayout
        android:id="@+id/weekLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dateLayout"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:orientation="horizontal"
        android:paddingLeft="6dp"
        android:paddingRight="6dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="6dp"
            android:text="日"
            android:textColor="#a8afb3"
            android:textSize="26px" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="6dp"
            android:text="一"
            android:textColor="#a8afb3"
            android:textSize="26px" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="6dp"
            android:text="二"
            android:textColor="#a8afb3"
            android:textSize="26px" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="6dp"
            android:text="三"
            android:textColor="#a8afb3"
            android:textSize="26px" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="6dp"
            android:text="四"
            android:textColor="#a8afb3"
            android:textSize="26px" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="6dp"
            android:text="五"
            android:textColor="#a8afb3"
            android:textSize="26px" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="6dp"
            android:text="六"
            android:textColor="#a8afb3"
            android:textSize="26px" />

    </LinearLayout>

    <GridView
        android:id="@+id/gridView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/sign"
        android:layout_below="@+id/weekLayout"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:layout_marginTop="12px"
        android:numColumns="7" />

    <CheckedTextView
        android:id="@+id/sign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80px"
        android:layout_marginLeft="100px"
        android:layout_marginRight="100px"
        android:layout_marginTop="40px"
        android:background="@drawable/btn_general_style"
        android:checkable="true"
        android:enabled="true"
        android:gravity="center"
        android:padding="16px"
        android:text="签到"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="30px" />


</com.zhy.autolayout.AutoRelativeLayout>
