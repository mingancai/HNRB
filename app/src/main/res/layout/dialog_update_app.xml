<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#a6000000">

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/layout"
        android:layout_width="562px"
        android:layout_height="438px"
        android:layout_centerInParent="true"
        android:background="@drawable/dialog_update_app_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:layout_marginTop="40px"
            android:text="新版本特性"
            android:textColor="@android:color/black"
            android:textSize="28px"
            android:textStyle="bold" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_marginTop="22px"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="54px"
            android:layout_marginLeft="68px"
            android:layout_marginRight="68px"
            android:layout_marginTop="40px"
            android:background="@drawable/btn_general_style"
            android:gravity="center_horizontal"
            android:padding="10px"
            android:text="更新"
            android:textColor="@android:color/white"
            android:textSize="26px" />

    </com.zhy.autolayout.AutoLinearLayout>

    <ImageView
        android:id="@+id/close"
        android:layout_width="68px"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layout"
        android:layout_marginBottom="-40px"
        android:layout_marginLeft="-40px"
        android:layout_toRightOf="@+id/layout"
        android:src="@drawable/dialog_update_close" />

</com.zhy.autolayout.AutoRelativeLayout>