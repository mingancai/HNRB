<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.hnzx.hnrb.ui.government.governmentbox.LeaderAboutActivity">

    <include layout="@layout/layout_top_liner" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="200px"
        android:layout_height="200px"
        android:layout_marginBottom="40px"
        android:layout_marginTop="44px"
        app:layout_auto_basewidth="height" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:textColor="@android:color/black"
        android:textSize="30px" />

    <TextView
        android:id="@+id/msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="44px"
        android:layout_marginLeft="28px"
        android:layout_marginRight="28px"
        android:layout_marginTop="10px"
        android:gravity="center_horizontal"
        android:textColor="#666666"
        android:textSize="28px" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#E8E8E8" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:lines="1"
            android:paddingBottom="30px"
            android:paddingLeft="30px"
            android:paddingTop="30px"
            android:text="基本资料"
            android:textColor="#87847d"
            android:textSize="30px" />

        <CheckBox
            android:id="@+id/showOrHideMsg"
            android:layout_width="40px"
            android:layout_height="40px"
            android:layout_marginRight="30px"
            android:background="@drawable/leader_about_msg_btn"
            android:button="@null"
            android:checked="false"
            app:layout_auto_basewidth="height" />

    </com.zhy.autolayout.AutoLinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#E8E8E8" />

    <TextView
        android:id="@+id/data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f6f6f6"
        android:paddingBottom="40px"
        android:paddingLeft="30px"
        android:paddingRight="30px"
        android:paddingTop="54px"
        android:textColor="#6a6a6a"
        android:textSize="30px" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/personal"
            android:layout_width="0px"
            android:layout_height="70px"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawableBottom="@drawable/leader_about_rb_bottom_drawable"
            android:gravity="center"
            android:text="个人履历"
            android:textColor="@color/leader_about_rb_color"
            android:textSize="30px" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#E8E8E8" />

        <RadioButton
            android:id="@+id/about"
            android:layout_width="0px"
            android:layout_height="70px"
            android:layout_weight="1"
            android:button="@null"
            android:drawableBottom="@drawable/leader_about_rb_bottom_drawable"
            android:gravity="center"
            android:text="相关新闻"
            android:textColor="@color/leader_about_rb_color"
            android:textSize="30px" />

    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#E8E8E8" />

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</com.zhy.autolayout.AutoLinearLayout>
