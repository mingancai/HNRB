<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingTop="32px">

    <TextView
        android:id="@+id/newsTitle"
        android:layout_width="700px"
        android:layout_height="wrap_content"
        tools:text="河南：今年河南企业要全面改革、全力攻坚、争取最后的胜利"
        android:textColor="#131313"
        android:textSize="44px" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="16px"
        android:paddingLeft="26px"
        android:paddingRight="24px"
        android:paddingTop="22px">

        <TextView
            android:id="@+id/from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="河南日报客户端"
            android:textColor="#4b4b4b"
            android:textSize="24px" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18px"
            tools:text="2017-03-15 18:28"
            android:textColor="#b7b7b7"
            android:textSize="24px" />

        <View
            android:layout_width="0px"
            android:layout_height="2px"
            android:layout_marginLeft="12px"
            android:layout_weight="1"
            android:background="#f2f2f2" />

        <CheckedTextView
            android:id="@+id/readPager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/news_read_bg"
            android:drawableLeft="@drawable/icon_news_read_pager"
            android:drawablePadding="4px"
            android:gravity="center"
            android:paddingBottom="4px"
            android:paddingLeft="10px"
            android:paddingRight="10px"
            android:paddingTop="4px"
            android:text="播报"
            android:textAlignment="gravity"
            android:textColor="@android:color/white"
            android:textSize="20px" />

    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:id="@+id/reporters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18px"
        android:paddingBottom="28px"
        android:textColor="#4a4a4a"
        android:textSize="24px"
        android:visibility="gone" />

    <FrameLayout
        android:id="@+id/mLayoutZuTu"
        android:layout_width="match_parent"
        android:layout_height="396px"
        android:paddingLeft="24px"
        android:paddingRight="24px"
        android:paddingTop="40px"
        android:visibility="gone">

        <ImageView
            android:id="@+id/mImageViewZuTu"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/mTextViewZuTu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:background="#77000000"
            android:paddingBottom="8px"
            android:paddingLeft="18px"
            android:paddingRight="18px"
            android:paddingTop="8px"
            android:text="共6张"
            android:textColor="@android:color/white"
            android:textSize="24px" />

    </FrameLayout>

    <fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard
        android:id="@+id/standard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/webLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="40px"
        android:paddingLeft="10px"
        android:paddingRight="10px"
        android:paddingTop="40px" />

    <com.hnzx.hnrb.htmlTools.TWebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="40px"
        android:layout_marginLeft="10px"
        android:layout_marginRight="10px"
        android:layout_marginTop="40px" />

    <TextView
        android:id="@+id/editor"
        android:layout_width="match_parent"
        android:layout_height="34px"
        android:paddingLeft="26px"
        tools:text="编辑：张兴华"
        android:textColor="#9b9b9b"
        android:textSize="24px" />

    <TextView
        android:id="@+id/support"
        android:layout_width="134px"
        android:layout_height="134px"
        android:background="@drawable/news_support_background"
        android:drawableTop="@drawable/news_support_white"
        android:gravity="center"
        android:paddingTop="30px"
        android:text="点赞"
        android:textColor="@android:color/white"
        android:textSize="24px"
        app:layout_auto_basewidth="height" />

    <TextView
        android:id="@+id/supportNum"
        android:layout_width="wrap_content"
        android:layout_height="34px"
        tools:text="888"
        android:textColor="#8a8a8a"
        android:textSize="24px" />

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/subscribeLayout"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginTop="60px"
        android:background="#f2f2f2"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="26px"
        android:paddingRight="24px">

        <TextView
            android:id="@+id/click"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击"
            android:textColor="#2c2c2c"
            android:textSize="24px" />

        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:text="热点要闻"
            android:textColor="#287ded"
            android:textSize="24px" />

        <TextView
            android:id="@+id/more"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_weight="1"
            android:text="浏览更多内容"
            android:textColor="#2c2c2c"
            android:textSize="24px" />

        <TextView
            android:id="@+id/subscribe"
            android:layout_width="100px"
            android:layout_height="58px"
            android:background="@drawable/new_subscribe"
            android:gravity="center"
            android:text="订阅"
            android:textColor="@android:color/white"
            android:textSize="24px" />

    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/reporterLayouts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="24px"
        android:paddingRight="24px"
        android:visibility="gone">

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/reporterLayout0"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/reporter_iv0"
                android:layout_width="108px"
                android:layout_height="114px"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/reporter_tv0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/reporter_iv0"
                android:layout_marginTop="16px"
                android:lines="1"
                android:textColor="#4a4a4a"
                android:textSize="24px" />

        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/reporterLayout1"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90px"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/reporter_iv1"
                android:layout_width="108px"
                android:layout_height="114px"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/reporter_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/reporter_iv1"
                android:layout_marginTop="16px"
                android:lines="1"
                android:textColor="#4a4a4a"
                android:textSize="24px" />

        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/reporterLayout2"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90px"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/reporter_iv2"
                android:layout_width="108px"
                android:layout_height="114px"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/reporter_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/reporter_iv2"
                android:layout_marginTop="16px"
                android:lines="1"
                android:textColor="#4a4a4a"
                android:textSize="24px" />

        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/reporterLayout3"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90px"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/reporter_iv3"
                android:layout_width="108px"
                android:layout_height="114px"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/reporter_tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/reporter_iv3"
                android:layout_marginTop="16px"
                android:lines="1"
                android:textColor="#4a4a4a"
                android:textSize="24px" />

        </com.zhy.autolayout.AutoRelativeLayout>

    </com.zhy.autolayout.AutoLinearLayout>

    <ImageView
        android:id="@+id/news_details_ad"
        android:layout_width="match_parent"
        android:layout_height="230px"
        android:layout_marginTop="60px"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_morentu_datumoshi"
        android:visibility="gone" />

    <TextView
        android:id="@+id/hotComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="44px"
        android:paddingLeft="26px"
        android:text="热门评论"
        android:textColor="#87847d"
        android:textSize="30px" />

</com.zhy.autolayout.AutoLinearLayout>