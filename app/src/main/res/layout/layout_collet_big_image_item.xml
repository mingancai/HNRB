<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="22px"
    android:paddingTop="16px">

    <com.zhy.autolayout.AutoFrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28px"
        android:layout_marginRight="28px">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="396px" />

        <View
            android:layout_width="94px"
            android:layout_height="94px"
            android:background="@drawable/mine_colletion_type" />

        <TextView
            android:id="@+id/itemType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="20px"
            android:drawableLeft="@drawable/subject_item_type"
            android:drawablePadding="14px"
            android:gravity="center_vertical"
            android:text="专题"
            android:textColor="@android:color/white"
            android:textSize="24px"
            android:visibility="invisible" />

    </com.zhy.autolayout.AutoFrameLayout>


    <TextView
        android:id="@+id/title"
        android:layout_width="692px"
        android:layout_height="wrap_content"
        android:layout_marginTop="18px"
        android:maxLines="2"
        android:textColor="@android:color/black"
        android:textSize="36px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="29px"
        android:paddingRight="29px"
        android:paddingTop="26px">

        <TextView
            android:id="@+id/time"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="8px"
            android:maxLines="1"
            android:textColor="#979797"
            android:textSize="24px" />

        <TextView
            android:id="@+id/look"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="34px"
            android:drawableLeft="@drawable/news_looknum"
            android:drawablePadding="8px"
            android:maxLines="1"
            android:textColor="#979797"
            android:textSize="24px" />

        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="34px"
            android:drawableLeft="@drawable/news_looknum"
            android:drawablePadding="8px"
            android:maxLines="1"
            android:textColor="#979797"
            android:textSize="24px"
            android:visibility="gone" />

    </LinearLayout>

</com.zhy.autolayout.AutoLinearLayout>