<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="22px"
    android:paddingTop="22px">

    <ImageView
        android:id="@+id/image"
        android:layout_width="692px"
        android:layout_height="396px"
        android:layout_gravity="center_horizontal"
        android:scaleType="centerCrop"
        app:layout_auto_basewidth="height" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="692px"
        android:layout_height="396px"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/big_iamge_gradient"
        android:orientation="vertical"
        app:layout_auto_basewidth="height">

        <CheckedTextView
            android:id="@+id/stateLive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/live_vedio_state_style"
            android:paddingBottom="4px"
            android:paddingLeft="10px"
            android:paddingRight="10px"
            android:paddingTop="4px"
            android:text="回顾"
            android:textColor="@android:color/white"
            android:textSize="22px" />

        <Space
            android:layout_width="0px"
            android:layout_height="0px"
            android:layout_weight="1" />

        <CheckedTextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20px"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:drawableLeft="@drawable/live_title_icon"
            android:drawablePadding="10px"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@android:color/white"
            android:textSize="30px" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:paddingBottom="20px"
            android:paddingLeft="20px"
            android:paddingRight="20px"
            android:textColor="@android:color/white"
            android:textSize="20px" />

    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoFrameLayout>