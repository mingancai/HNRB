<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="19px"
    android:paddingLeft="12px"
    android:paddingRight="12px"
    android:paddingTop="19px">

    <ImageView
        android:id="@+id/image"
        android:layout_width="164px"
        android:layout_height="164px"
        android:scaleType="centerCrop"
        app:layout_auto_basewidth="height" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="22px"
        android:layout_marginTop="26px"
        android:gravity="center"
        android:lines="1"
        android:textColor="@android:color/black"
        android:textSize="26px" />

    <CheckedTextView
        android:id="@+id/state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/square_government_state_bg"
        android:paddingBottom="6px"
        android:paddingLeft="12px"
        android:paddingRight="12px"
        android:paddingTop="6px"
        android:text="关注"
        android:textColor="@color/square_government_state_tvcolor"
        android:textSize="24px" />

</com.zhy.autolayout.AutoLinearLayout>