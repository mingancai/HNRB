<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clickable="true"
    android:focusableInTouchMode="true"
    tools:background="@android:color/white">

    <EditText
        android:id="@+id/register_edit_mobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="104px"
        android:layout_marginRight="104px"
        android:layout_marginTop="190px"
        android:background="@drawable/shape_bg_line_gray"
        android:gravity="center"
        android:hint="输入手机号"
        android:textCursorDrawable="@null"
        android:inputType="phone"
        android:padding="15px"
        android:textColorHint="#c1c1c1"
        android:textSize="30px" />

    <LinearLayout
        android:id="@+id/register_linea_smsCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40px"
        android:layout_marginLeft="104px"
        android:layout_marginRight="104px"
        android:background="@drawable/shape_bg_line_gray"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="15px">

        <TextView
            android:id="@+id/register_text_sendCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取验证码"
            android:textColor="#4a90e2"
            android:textSize="30px"
            android:visibility="visible" />


        <RelativeLayout
            android:id="@+id/register_relative_smsCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <EditText
                android:id="@+id/register_edit_smsCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@null"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textColorHint="#c1c1c1"
                android:textSize="30px" />

            <TextView
                android:id="@+id/register_text_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30px"
                android:layout_alignParentRight="true"
                tools:text="30秒后刷新" />

        </RelativeLayout>

    </LinearLayout>

    <Button
        android:id="@+id/register_button_register"
        android:layout_width="match_parent"
        android:layout_height="76px"
        android:layout_marginTop="200px"
        android:layout_marginLeft="104px"
        android:layout_marginRight="104px"
        android:background="@drawable/shape_red_radius"
        android:gravity="center"
        android:text="注册"
        android:textColor="@android:color/white"
        android:textSize="30px" />


</com.zhy.autolayout.AutoLinearLayout>