<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:orientation="vertical">

    <com.hnzx.hnrb.view.banner.Banner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="422px"
        android:background="@android:color/white"
        android:visibility="gone"
        app:default_image="@drawable/bg_morentu_datumoshi"
        app:delay_time="3000"
        app:indicator_drawable_selected="@drawable/banner_indicator_selected_square"
        app:indicator_drawable_unselected="@drawable/banner_indicator_unselected_square"
        app:indicator_height="10px"
        app:indicator_margin="12px"
        app:indicator_width="10px"
        app:layout_auto_basewidth="height" />

    <TextView
        android:id="@+id/selectionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30px"
        android:layout_marginLeft="22px"
        android:layout_marginTop="30px"
        android:text="精选推荐"
        android:textColor="#87847d"
        android:textSize="30px" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginBottom="20px"
        android:background="#f2f2f2"
        app:layout_auto_basewidth="height" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="224px" />

    <TextView
        android:id="@+id/governmentTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30px"
        android:layout_marginLeft="22px"
        android:layout_marginTop="30px"
        android:text="政务推荐"
        android:textColor="#87847d"
        android:textSize="30px" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginBottom="20px"
        android:background="#f2f2f2"
        app:layout_auto_basewidth="height" />

    <com.hnzx.hnrb.view.NSRecyclerView
        android:id="@+id/governmentRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/goGovernmentCenter"
        android:layout_width="460px"
        android:layout_height="62px"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="58px"
        android:layout_marginTop="56px"
        android:background="@drawable/square_goservice_bg"
        android:gravity="center"
        android:text="点击进入机构列表"
        android:textColor="@android:color/white"
        android:textSize="28px"
        app:layout_auto_basewidth="height" />

    <TextView
        android:id="@+id/releaseTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30px"
        android:layout_marginLeft="22px"
        android:text="最新发布"
        android:textColor="#87847d"
        android:textSize="30px" />

</com.zhy.autolayout.AutoLinearLayout>