<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    android:padding="28px">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="288px"
        android:layout_height="162px"
        app:layout_auto_basewidth="height">

        <ImageView
            android:id="@+id/image"
            android:layout_width="288px"
            android:layout_height="162px"
            android:scaleType="fitXY"
            app:layout_auto_basewidth="height" />

        <ImageView
            android:id="@+id/news_image_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10px"
            android:layout_marginLeft="10px"
            android:src="@drawable/news_list_item_image"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/image_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/news_image_type"
            android:layout_toRightOf="@+id/news_image_type"
            android:textColor="@android:color/white"
            android:textSize="16px"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/news_video_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10px"
            android:layout_marginLeft="10px"
            android:src="@drawable/news_list_item_video"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/news_video_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10px"
            android:layout_marginRight="10px"
            android:background="@drawable/news_item_video_time_bg"
            android:drawableLeft="@drawable/news_list_item_video_start"
            android:drawablePadding="10px"
            android:paddingBottom="2px"
            android:paddingLeft="10px"
            android:paddingRight="10px"
            android:paddingTop="2px"
            android:textColor="@android:color/white"
            android:textSize="22px"
            android:visibility="invisible" />

    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="18px"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textColor="#353535"
            android:textSize="32px" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="vertical">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/type"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:textColor="#979797"
                    android:textSize="20px" />

                <TextView
                    android:id="@+id/look"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/news_looknum"
                    android:drawablePadding="6px"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:textColor="#979797"
                    android:textSize="20px" />

            </com.zhy.autolayout.AutoLinearLayout>


        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>