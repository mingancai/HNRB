<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.hnzx.hnrb.view.TopHeadView
        android:id="@+id/modify_old_pwd_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.hnzx.hnrb.view.TopHeadView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="28px"
        android:paddingRight="28px"
        android:paddingTop="100px">

        <LinearLayout
            android:id="@+id/modify_old_pwd_content"
            android:layout_width="match_parent"
            android:layout_height="102px"
            android:background="@drawable/shape_border_gray_solid_gray"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="206px"
                android:padding="24px"
                android:text="当前密码"
                android:textColor="@android:color/black"
                android:textSize="30px" />

            <View
                android:layout_width="2px"
                android:layout_height="match_parent"
                android:layout_marginRight="42px"
                android:background="#ececec" />

            <EditText
                android:id="@+id/modify_old_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入当前密码"
                android:inputType="textPassword"
                android:padding="24px"
                android:textSize="30px"
                tools:text="1376272719" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="102px"
            android:layout_marginTop="26px"
            android:background="@drawable/shape_border_gray_solid_gray"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="206px"
                android:padding="24px"
                android:text="新密码"
                android:textColor="@android:color/black"
                android:textSize="30px" />

            <View
                android:layout_width="2px"
                android:layout_height="match_parent"
                android:layout_marginRight="42px"
                android:background="#ececec" />

            <EditText
                android:id="@+id/modify_new_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="输入新密码"
                android:inputType="textPassword"
                android:padding="24px"
                android:textSize="30px" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="102px"
            android:layout_marginTop="26px"
            android:background="@drawable/shape_border_gray_solid_gray"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="206px"
                android:padding="24px"
                android:text="确认新密码"
                android:textColor="@android:color/black"
                android:textSize="30px" />

            <View
                android:layout_width="2px"
                android:layout_height="match_parent"
                android:layout_marginRight="42px"
                android:background="#ececec" />

            <EditText
                android:id="@+id/modify_new_pwd_sure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="确认新密码"
                android:inputType="textPassword"
                android:minWidth="206px"
                android:padding="24px"
                android:textSize="30px" />

        </LinearLayout>


        <Button
            android:id="@+id/modify_pwd_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="76px"
            android:layout_marginRight="76px"
            android:layout_marginTop="108px"
            android:background="@drawable/shape_red_radius"
            android:gravity="center"
            android:minHeight="76px"
            android:text="@string/label_sure"
            android:textColor="@android:color/white"
            android:textSize="30px" />


    </LinearLayout>


</com.zhy.autolayout.AutoLinearLayout>