<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoFrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26px">

        <ImageView
            android:id="@+id/image"
            android:layout_width="694px"
            android:layout_height="390px"
            android:scaleType="centerCrop"
            app:layout_auto_basewidth="height" />

        <TextView
            android:id="@+id/imagePages"
            android:layout_width="86px"
            android:layout_height="34px"
            android:layout_gravity="bottom|right"
            android:layout_margin="6px"
            android:background="@drawable/image_list_item_image_pages"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="24px"
            app:layout_auto_basewidth="height" />

    </com.zhy.autolayout.AutoFrameLayout>

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26px"
        android:layout_marginRight="26px"
        android:layout_marginTop="28px"
        android:textColor="@android:color/black"
        android:textSize="30px" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26px"
        android:layout_marginRight="26px"
        android:layout_marginTop="10px"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/time"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#979797"
            android:textSize="24px" />

        <TextView
            android:id="@+id/scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24px"
            android:drawableLeft="@drawable/news_looknum"
            android:drawablePadding="8px"
            android:textColor="#979797"
            android:textSize="24px" />

    </com.zhy.autolayout.AutoLinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="26px"
        android:background="@color/line" />

</com.zhy.autolayout.AutoLinearLayout>