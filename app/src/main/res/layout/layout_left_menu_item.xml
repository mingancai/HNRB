<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="108px"
    android:background="@drawable/left_menu_item_style"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/name"
        android:layout_width="0px"
        android:layout_height="64px"
        android:layout_weight="1"
        android:drawablePadding="10px"
        android:gravity="center_vertical"
        android:paddingLeft="44px"
        android:textColor="#262626"
        android:textSize="30px" />

    <ImageView
        android:id="@+id/loading"
        android:layout_width="84px"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="20px"
        android:layout_marginRight="28px"
        android:src="@drawable/icon_update"
        android:visibility="visible" />

    <CheckedTextView
        android:id="@+id/subscribe"
        android:layout_width="74px"
        android:layout_height="44px"
        android:layout_marginRight="28px"
        android:background="@drawable/left_menu_item_btn_style"
        android:checked="true"
        android:gravity="center_vertical"
        android:text="订阅"
        android:textAlignment="center"
        android:textColor="@color/subscribe_color"
        android:textSize="24px" />
</LinearLayout>