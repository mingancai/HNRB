<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <shape android:shape="oval">

            <solid android:color="#ff0009" />

            <stroke android:width="10px" android:color="#20ff0009" />

            <size android:width="25px" android:height="25px" />

        </shape>
    </item>
    <item android:state_checked="true">
        <shape android:shape="oval">

            <solid android:color="#498ee2" />

            <stroke android:width="10px" android:color="#2b498ee2" />

            <size android:width="25px" android:height="25px" />

        </shape>
    </item>

</selector>