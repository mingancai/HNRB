<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <corners android:bottomRightRadius="10px" android:topLeftRadius="10px" />

            <solid android:color="#287ded" />
        </shape>
    </item>

    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:bottomRightRadius="10px" android:topLeftRadius="8px" />

            <solid android:color="#FFED2857" />
        </shape>
    </item>
</selector>

